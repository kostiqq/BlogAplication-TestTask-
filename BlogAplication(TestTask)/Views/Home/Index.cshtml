@using BlogAplication.ViewModels.NewsViewModels;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model NewsViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Новости</title>
</head>
<body>
    <div>
        <h3>Новостная лента</h3>
        <table>
            <tr>
                <td><p>Заголовок</p></td>
                <td><p>Кратко</p></td>
                <td><p>Описание</p></td>
                <td><p>картинка</p></td>
                <td><p>Категория</p></td>
                <td><p>Тэги</p></td>
                <td><p>Дата</p></td>
                <td></td>
            </tr>
            @foreach (var a in Model.News)
            {
                <tr>
                    <td><p>@a.Name</p></td>
                    <td><p>@a.ShortDesc</p></td>
                    <td><p>@a.Description</p></td>
                    <td><p>@a.ImageLink</p></td>
                    <td><p>@a.CategoryID</p></td>
                    <td><p>@a.Tags</p></td>
                    <td><p>@a.Date</p></td>
                  @*<td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>*@
                </tr>
             }
        </table>
    </div>
</body>
</html>