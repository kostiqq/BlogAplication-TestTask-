@model BlogAplication.ViewModels.NewsViewModels.NewsViewModel

@{
    ViewData["Title"] = "EditNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditNews">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="News.First().Id" class="control-label"></label>
                <input asp-for="News.First().Id" class="form-control" readonly />
                <span asp-validation-for="News.First().Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.First().Name" class="control-label"></label>
                <input asp-for="News.First().Name" class="form-control"></input>
                <span asp-validation-for="News.First().Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.First().ShortDesc" class="control-label"></label>
                <input asp-for="News.First().ShortDesc" class="form-control"></input>
                <span asp-validation-for="News.First().ShortDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.First().Description" class="control-label"></label>
                <input asp-for="News.First().Description" type="number" class="form-control" />
                <span asp-validation-for="News.First().Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.First().ImageLink" class="control-label"></label>
                <input asp-for="News.First().ImageLink" class="form-control" />
                <span asp-validation-for="News.First().ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.First().CategoryID" class="control-label"></label>
                <select asp-for="News.First().CategoryID" class="form-control" asp-items="Model.CategoryList" />
                <span asp-validation-for="News.First().CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.First().Tags" class="control-label"></label>
                <input asp-for="News.First().Tags" class="form-control" />
                <span asp-validation-for="News.First().Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.First().Date" class="control-label"></label>
                <input asp-for="News.First().Date" class="form-control" />
                <span asp-validation-for="News.First().Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
