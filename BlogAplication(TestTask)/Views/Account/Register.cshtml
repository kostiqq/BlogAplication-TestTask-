@model BlogAplication.Models.RegisterModel

<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/styleForreg.css">


<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>

        <label class="control-label" asp-for="Email">Enter Email</label><br />
        <input class="form-control form-control-input" type="text" asp-for="Email" /><br>
        <span asp-validation-for="Email" />

        <label class="control-label" asp-for="Pass">Enter password</label><br />
        <input class="form-control form-control-input" asp-for="Pass" /><br>
        <span asp-validation-for="Pass" />

        <label class="control-label" asp-for="ConfirmPassword">Enter password</label><br />
        <input class="form-control form-control-input" asp-for="ConfirmPassword" /><br>
        <span asp-validation-for="ConfirmPassword" />

        <input type="submit" value="Registration" class="btn" />

    </div>
</form>