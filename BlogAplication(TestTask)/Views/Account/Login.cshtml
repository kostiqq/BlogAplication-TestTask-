@model BlogAplication.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/styleForreg.css">

<h2>Sign In</h2>

<a class = "font-registration" asp-action="Register" asp-controller="Account">Registration</a>

<form method="post" asp-action="Login" asp-controller="Account" >
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label class="control-label" asp-for="Email">Email:</label><br>
            <input class="form-control form-control-input" type="text" asp-for="Email" /><br>
            <span asp-validation-for="Email" />

            <label class="control-label" asp-for="Password">Password:</label><br>
            <input class="form-control form-control-input" asp-for="Password" />
            <span asp-validation-for="Password" /><br>
            <div>
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <input type="submit" value="Enter" class="btn" />
        </div>
    </div>
</form>