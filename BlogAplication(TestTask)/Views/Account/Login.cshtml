@model BlogAplication.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="/css/style.css">

<h2>Sign In</h2>

<a class = "font-registration" asp-action="Register" asp-controller="Account">Registration</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label class="control-label" asp-for="Email">Enter Email</label>
            <input class ="form-control form-control-input" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
       
            <label class="control-label" asp-for="Pass">Enter password</label>
            <input class ="form-control form-control-input" asp-for="Pass" />
            <span asp-validation-for="Pass" />
    
            <input type="submit" value="Enter" class="btn" />
        </div>
    </div>
</form>